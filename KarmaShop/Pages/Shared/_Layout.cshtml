@{
    var user = Context.Session.GetString("user");
    User obj = null;
    if (user != null)
    {
        obj = JsonSerializer.Deserialize<User>(user);
    };
    var cartJson = Context.Session.GetString("Cart");
    string quantity = "0";
    if (cartJson != null)
    {
        quantity = JsonSerializer.Deserialize<string>(cartJson);
    }
}
